<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/sendBroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack send broadcast"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/handActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack Activity"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/startReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Receiver"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/cancleReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="Cancle Receiver"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/handService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack Service"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</layout>